<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notification System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        section.background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: #001300;
            display: flex;
            flex-wrap: wrap;
            z-index: -1;
            overflow: hidden;
        }

            section.background span {
                position: relative;
                width: 40px;
                height: 40px;
                display: block;
            }

                section.background span::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: #00ff0a;
                    transform: scale(0.1);
                    box-shadow: 0 0 10px #00ff0a, 0 0 20px #00ff0a, 0 0 40px #00ff0a, 0 0 60px #00ff0a;
                    border-radius: 50%;
                    pointer-events: none;
                    transition: 2s;
                }

                section.background span:hover::before {
                    transform: scale(1);
                    transition: 0s;
                }
    </style>
</head>
<body class="text-white min-h-screen flex flex-col items-center px-4 relative overflow-y-auto">
    <!-- Navigation -->
    <nav class="flex justify-between items-center w-full px-8 py-4">
        <div class="flex space-x-4 text-sm font-medium">
            <a asp-action="Index" asp-controller="Home" class="hover:underline">Home</a>
            <a asp-action="ManageSubscribers" asp-controller="Home" class="hover:underline">Manage Subscriptions</a>
        </div>
        <a asp-action="Notify" asp-controller="Home" class="bg-white text-black px-3 py-1 rounded-full text-xs font-semibold">Notify All</a>
    </nav>

    <!-- Glowing Background -->
    <section class="background">
        @for (int i = 0; i < 1000; i++)
        {
            <span></span>
        }
    </section>

    <!-- Main Content -->
    <div class="relative z-10 w-full max-w-6xl mt-20">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>